{
  "appId": "com.hydroflow.app",
  "appName": "Hydro-Flow Monitor",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "hostname": "localhost"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#1e3a8a",
      "showSpinner": true,
      "androidSpinnerStyle": "large",
      "spinnerColor": "#ffffff"
    },
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#1e3a8a",
      "overlaysWebView": false
    }
  }
}
