{
  "appId": "com.hydroflow.app",
  "appName": "Hydro-Flow Monitor",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "cleartext": true,
    "androidScheme": "https",
    "hostname": "app.hydroflow.local"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#1e3a8a",
      "showSpinner": true,
      "androidSpinnerStyle": "large",
      "spinnerColor": "#ffffff"
    }
  }
}
